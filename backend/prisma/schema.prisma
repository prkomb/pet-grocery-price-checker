generator client {
  provider = "prisma-client-js"
}

 datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
 }



model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  profile      Profile?
}

model Profile {
  id        Int @unique
  name      String
  surname   String
  phone     String
  city      String
  town      String
  postcode  String
  bio       String 
  
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
}

model InviteCode {
  code          String  @id
  isUsed        Boolean @default(false)
  createdAt     DateTime @default(now())
  usedAt        DateTime?
  expiresAt     DateTime?
  maxUses       Int @default(1)

}



enum Role {
  USER
  ADMIN
}

